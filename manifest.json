{
  "manifest_version": 3,
  "name": "Website Safety Signal",
  "version": "1.0.0",
  "description": "Shows website safety (Green / Yellow / Red) automatically when switching tabs.",
  "permissions": [
    "tabs",
    "cookies",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
